public class TokenSetFactory {
    public static TokenSet createBasicTokenSet() {
        TokenSet tokenSet = new TokenSet();
        tokenSet.addOperation('+', Double::sum);
        tokenSet.addOperation('-', (a, b) -> a - b);
        tokenSet.addOperation('*', (a, b) -> a * b);
        tokenSet.addOperation('/', (a, b) -> a / b);

        // Adding English tokens
        tokenSet.addOperation("add", Double::sum);
        tokenSet.addOperation("sub", (a, b) -> a - b);
        tokenSet.addOperation("mul", (a, b) -> a * b);
        tokenSet.addOperation("div", (a, b) -> a / b);
        
        return tokenSet;
    }

    public static TokenSet createExtendedTokenSet() {
        TokenSet tokenSet = createBasicTokenSet();
        tokenSet.addOperation('%', (a, b) -> a % b);
        tokenSet.addOperation('^', Math::pow);

        // Adding English tokens for extended operations
        tokenSet.addOperation("mod", (a, b) -> a % b);
        tokenSet.addOperation("pow", Math::pow);
        
        return tokenSet;
    }
}
